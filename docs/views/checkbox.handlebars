<h1 class="mar-b-xs">Checkbox</h1>
<h2 class="txt-gray-5 mar-t-0">Form element for selecting many options</h2>
<h2 id="demo">Demo</h2>
<code-sample>
  <fieldset>
    <legend>Languages</legend>
    <input id="html" type="checkbox" name="speed" value="html" checked>
    <label for="html">HTML</label>
    <input id="css" type="checkbox" name="speed" value="css">
    <label for="css">CSS</label>
    <input id="js" type="checkbox" name="speed" value="js">
    <label for="js">JavaScript</label>
  </fieldset>
</code-sample>
