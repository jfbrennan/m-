<h2 class="txt-gray-4 mar-t-none">Navigational hierarchy</h2>
<h2 id="demo">Demo</h2>
<code-sample>
  <m-breadcrumb>
    <nav>
      <a href="#">Home</a>
      <a href="#">Shoes</a>
      <span aria-current="page">Women</span>
    </nav>
  </m-breadcrumb>
</code-sample>
