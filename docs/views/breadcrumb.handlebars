<h1 class="mar-b-xs">Breadcrumb</h1>
<h2 class="txt-gray-5 mar-t-none">Navigational hierarchy</h2>
<h2 id="demo">Demo</h2>
<code-sample>
  <m-breadcrumb>
    <nav>
      <span>Home</span>
    </nav>
  </m-breadcrumb>
  <m-breadcrumb>
    <nav>
      <a href="#">Home</a>
      <span>Shoes</span>
    </nav>
  </m-breadcrumb>
  <m-breadcrumb>
    <nav>
      <a href="#">Home</a>
      <a href="#">Shoes</a>
      <span>Women</span>
    </nav>
  </m-breadcrumb>
</code-sample>
